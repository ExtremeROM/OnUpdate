<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- #App Day/Night Mode Themes# -->
    <style name="mesa_AboutActivity_AppStyle.DayNight" parent="@style/mesa_OTA_AppStyle" />
    <style name="mesa_OTA_AppStyle.DayNight" parent="@style/mesa_OTA_AppStyle" />
    <style name="mesa_OTA_ChangelogActivity_AppStyle.DayNight" parent="@style/mesa_OTA_ChangelogActivity_AppStyle" />

    <!-- #Activity Themes# -->
    <style name="mesa_OTA_AppStyle" parent="@style/mesa_AppStyle.NoActionBar">
        <item name="colorPrimaryDark">@color/mesa_ota_primary_dark_color_dark</item>
        <item name="colorPrimary">@color/mesa_ota_primary_color_dark</item>
        <item name="colorControlActivated">@color/mesa_ota_control_activated_color</item>
        <item name="progressActivatedColor">@color/mesa_ota_progress_control_color_activated_dark</item>
        <item name="progressNormalColor">@color/mesa_ota_progress_control_color_normal_dark</item>
        <item name="dialogTheme">@style/mesa_OTA_DialogStyle</item>
        <item name="android:alertDialogTheme">@style/mesa_OTA_DialogStyle</item>
        <item name="alertDialogTheme">@style/mesa_OTA_AlertDialogOverlayStyle</item>
    </style>

    <style name="mesa_OTA_AppOverlayStyle" parent="@style/mesa_AppOverlayStyle">
        <item name="colorPrimary">@color/mesa_ota_primary_color_dark</item>
        <item name="colorPrimaryDark">@color/mesa_ota_primary_dark_color_dark</item>
        <item name="colorControlActivated">@color/mesa_ota_control_activated_color</item>

    </style>

    <!-- ChangelogActivity -->
    <style name="mesa_OTA_ChangelogActivity_AppStyle" parent="@style/mesa_OTA_AppStyle">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">?round_and_bgColor</item>
    </style>

    <!-- #App Styles# -->
    <!-- Sesl Dialog -->
    <style name="mesa_OTA_DialogStyle" parent="@style/mesa_DialogStyle">
        <item name="colorPrimary">@color/mesa_ota_primary_color_dark</item>
        <item name="colorPrimaryDark">@color/mesa_ota_primary_dark_color_dark</item>
        <item name="colorControlActivated">@color/mesa_ota_control_activated_color</item>
    </style>

    <style name="mesa_ProgressCircleDialogStyle" parent="@style/mesa_OTA_DialogStyle">
        <item name="android:windowBackground">@drawable/mesa_ota_progress_circle_dialog_bg</item>
    </style>

    <style name="mesa_OTA_AlertDialogOverlayStyle" parent="@style/mesa_OTA_DialogStyle">
        <item name="android:windowMinWidthMajor">@dimen/sesl_dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@dimen/sesl_dialog_min_width_minor</item>
        <item name="windowMinWidthMajor">@dimen/sesl_dialog_min_width_major</item>
        <item name="windowMinWidthMinor">@dimen/sesl_dialog_min_width_minor</item>
    </style>
</resources>
